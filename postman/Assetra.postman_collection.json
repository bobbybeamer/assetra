{
  "info": {
    "name": "Assetra Smoke Flow",
    "description": "End-to-end smoke flow for Assetra APIs: auth, assets, scans, sync, webhooks, barcode validation, and lookup.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "01 Auth Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
        },
        "url": "{{baseUrl}}/api/v1/auth/token/"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('status 200', function () { pm.response.to.have.status(200); });",
              "const data = pm.response.json();",
              "pm.collectionVariables.set('accessToken', data.access);"
            ]
          }
        }
      ]
    },
    {
      "name": "02 Create Asset",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "X-Tenant-ID",
            "value": "{{tenantId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"asset_tag\": \"SMK-{{$randomInt}}\",\n  \"name\": \"Smoke Asset\",\n  \"barcode_value\": \"QR-SMK-{{$randomInt}}\",\n  \"barcode_type\": \"qr\"\n}"
        },
        "url": "{{baseUrl}}/api/v1/assets/"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('status 201', function () { pm.response.to.have.status(201); });",
              "const data = pm.response.json();",
              "pm.collectionVariables.set('assetId', data.id);",
              "pm.collectionVariables.set('barcodeValue', data.barcode_value);"
            ]
          }
        }
      ]
    },
    {
      "name": "03 Create Scan Event",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "X-Tenant-ID",
            "value": "{{tenantId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"asset\": {{assetId}},\n  \"symbology\": \"qr\",\n  \"raw_value\": \"{{barcodeValue}}\",\n  \"source_type\": \"camera\"\n}"
        },
        "url": "{{baseUrl}}/api/v1/scan-events/"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('status 201', function () { pm.response.to.have.status(201); });"
            ]
          }
        }
      ]
    },
    {
      "name": "04 Sync",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "X-Tenant-ID",
            "value": "{{tenantId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"scan_events\": []\n}"
        },
        "url": "{{baseUrl}}/api/v1/sync/"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('status 200', function () { pm.response.to.have.status(200); });"
            ]
          }
        }
      ]
    },
    {
      "name": "05 Create Inbound Webhook Endpoint",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "X-Tenant-ID",
            "value": "{{tenantId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Smoke Inbound\",\n  \"direction\": \"inbound\",\n  \"url\": \"https://example.com/inbound\",\n  \"events\": [\"scan.created\"]\n}"
        },
        "url": "{{baseUrl}}/api/v1/webhooks/"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('status 201', function () { pm.response.to.have.status(201); });",
              "const data = pm.response.json();",
              "pm.collectionVariables.set('webhookEndpointId', data.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "06 Trigger Inbound Webhook",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "X-Tenant-ID",
            "value": "{{tenantId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"endpoint_id\": {{webhookEndpointId}},\n  \"event_name\": \"scan.created\",\n  \"payload\": {\n    \"asset_id\": {{assetId}}\n  }\n}"
        },
        "url": "{{baseUrl}}/api/v1/webhooks/inbound/"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('status 202', function () { pm.response.to.have.status(202); });"
            ]
          }
        }
      ]
    },
    {
      "name": "07 Barcode Validate",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "X-Tenant-ID",
            "value": "{{tenantId}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"symbology\": \"qr\",\n  \"raw_value\": \"{{barcodeValue}}\"\n}"
        },
        "url": "{{baseUrl}}/api/v1/barcodes/validate/"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('status 200', function () { pm.response.to.have.status(200); });",
              "pm.test('barcode valid', function () { pm.expect(pm.response.json().valid).to.eql(true); });"
            ]
          }
        }
      ]
    },
    {
      "name": "08 Lookup By Barcode",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          },
          {
            "key": "X-Tenant-ID",
            "value": "{{tenantId}}"
          }
        ],
        "url": "{{baseUrl}}/api/v1/lookups/assets/?barcode={{barcodeValue}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('status 200', function () { pm.response.to.have.status(200); });",
              "pm.test('asset id exists', function () { pm.expect(pm.response.json().id).to.exist; });"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://127.0.0.1:8000"
    },
    {
      "key": "username",
      "value": "smoke_admin"
    },
    {
      "key": "password",
      "value": "SmokePass123!"
    },
    {
      "key": "tenantId",
      "value": "1"
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "assetId",
      "value": ""
    },
    {
      "key": "barcodeValue",
      "value": ""
    },
    {
      "key": "webhookEndpointId",
      "value": ""
    }
  ]
}
